/* 全局样式 */
page,
view,
text,
image,
input,
textarea,
button,
checkbox,
radio,
switch,
form {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 14px;
  color: #333;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 通用容器 */
.container {
  padding: 20rpx;
}

/* 按钮样式 */
.btn {
  display: block;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
}

.btn-primary {
  background-color: #07c160;
  color: white;
}

.btn-default {
  background-color: #f0f0f0;
  color: #666;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 30rpx;
}

.input-group label {
  display: block;
  margin-bottom: 10rpx;
  color: #666;
}

.input-group input,
.input-group textarea {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.input-group textarea {
  height: 200rpx;
  resize: none;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 错误提示 */
.error-message {
  color: #e64340;
  padding: 20rpx;
  margin: 20rpx 0;
  background-color: #fff1f0;
  border-radius: 10rpx;
}

/* 成功提示 */
.success-message {
  color: #07c160;
  padding: 20rpx;
  margin: 20rpx 0;
  background-color: #f6ffed;
  border-radius: 10rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx;
  color: #666;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
}

/* 订单状态样式 */
.status-pending {
  color: #ff9500;
}

.status-delivering {
  color: #1e88e5;
}

.status-completed {
  color: #07c160;
}

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
}

.header-user {
  display: flex;
  align-items: center;
}

.header-user span {
  margin-right: 20rpx;
}

.header-logout {
  font-size: 28rpx;
  color: #07c160;
}

/* 统计卡片样式 */
.stats-cards {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.stat-card {
  flex: 1;
  min-width: calc(50% - 10rpx);
  background-color: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  text-align: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

.stat-card.total .stat-value {
  color: #07c160;
}

.stat-card.pending .stat-value {
  color: #ff9500;
}

.stat-card.delivering .stat-value {
  color: #1e88e5;
}

.stat-card.completed .stat-value {
  color: #07c160;
}

/* 订单列表样式 */
.order-list {
  margin-top: 20rpx;
}

.order-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.order-content {
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #666;
  font-size: 26rpx;
}

.order-status {
  font-size: 28rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.order-status.pending {
  background-color: #fff7e6;
  color: #ff9500;
}

.order-status.delivering {
  background-color: #e3f2fd;
  color: #1e88e5;
}

.order-status.completed {
  background-color: #f6ffed;
  color: #07c160;
}

/* 查询区域样式 */
.search-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.search-form {
  display: flex;
  margin-bottom: 20rpx;
}

.search-form input {
  flex: 1;
  margin-right: 20rpx;
}

.search-form button {
  width: 140rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .stat-card {
    min-width: 100%;
  }
}
