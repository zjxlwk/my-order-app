.container {
  padding: 40rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  margin-top: 100rpx;
  margin-bottom: 60rpx;
  width: 200rpx;
  height: 200rpx;
}

.logo image {
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
}

.logo-text {
  text-align: center;
  margin-bottom: 60rpx;
  font-size: 48rpx;
  font-weight: bold;
  color: #07c160;
}

.login-form {
  width: 100%;
  max-width: 500rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 60rpx;
  color: #333;
}

.input-group {
  margin-bottom: 40rpx;
}

.input-group input {
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 44rpx;
  font-size: 32rpx;
  background-color: #fff;
}

.input-group input:focus {
  border-color: #07c160;
}

.btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 36rpx;
  border-radius: 48rpx;
  margin-top: 40rpx;
}

.btn-primary {
  background-color: #07c160;
  color: white;
}

.btn-primary:active {
  background-color: #06b555;
}

.register-link {
  text-align: center;
  margin-top: 40rpx;
  color: #666;
  font-size: 28rpx;
}

.register-link text {
  color: #07c160;
  margin-left: 10rpx;
}

.error-message {
  padding: 20rpx;
  margin-bottom: 30rpx;
  background-color: #fff1f0;
  border-radius: 10rpx;
  color: #e64340;
  font-size: 28rpx;
  text-align: center;
}


