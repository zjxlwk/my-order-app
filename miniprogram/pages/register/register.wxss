.container {
  padding: 40rpx;
  min-height: 100vh;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 60rpx;
  color: #333;
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input-group input {
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 32rpx;
  background-color: #fff;
}

.input-group input:focus {
  border-color: #07c160;
}

/* 用户类型选择器样式 */
.user-type-selector {
  display: flex;
  gap: 20rpx;
}

.user-type-item {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 32rpx;
  background-color: #fff;
  color: #666;
}

.user-type-item.active {
  border-color: #07c160;
  background-color: #f6ffed;
  color: #07c160;
}

.btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 36rpx;
  border-radius: 10rpx;
  margin-top: 40rpx;
}

.btn-primary {
  background-color: #07c160;
  color: white;
}

.btn-primary:active {
  background-color: #06b555;
}

.btn-default {
  background-color: #f5f5f5;
  color: #666;
}

.btn-default:active {
  background-color: #e8e8e8;
}

.error-message,
.success-message {
  padding: 20rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  text-align: center;
}

.error-message {
  background-color: #fff1f0;
  color: #e64340;
}

.success-message {
  background-color: #f6ffed;
  color: #07c160;
}